    <update id="updateByPrimaryKeySelective" parameterType="org.yjhking.pethome.pet.domain.SearchMasterMsg">
        update t_search_master_msg
        <set>
            <if test="title != null">
                title = #{title,jdbcType=VARCHAR},
            </if>
            <if test="state != null">
                `state` = #{state,jdbcType=INTEGER},
            </if>
            <if test="name != null">
